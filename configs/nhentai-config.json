{
    "source": "nhentai",
    "version": "1.0.0",
    "lastUpdated": "2026-01-13T13:16:00+07:00",
    "api": {
        "enabled": true,
        "baseUrl": "https://nhentai.net",
        "apiBase": "https://nhentai.net/api",
        "timeout": 30000,
        "endpoints": {
            "galleryDetail": "/api/gallery/{id}",
            "allGalleries": "/api/galleries/all?page={page}",
            "search": "/api/galleries/search?query={query}&page={page}&sort={sort}",
            "tagSearch": "/api/galleries/tagged?tag_id={tagId}&page={page}",
            "related": "/api/gallery/{id}/related",
            "random": "/random"
        },
        "images": {
            "fullSize": "https://i.nhentai.net/galleries/{mediaId}/{page}.{ext}",
            "thumbnail": "https://t.nhentai.net/galleries/{mediaId}/thumb.{ext}",
            "cover": "https://t.nhentai.net/galleries/{mediaId}/cover.{ext}",
            "pageThumbnail": "https://t.nhentai.net/galleries/{mediaId}/{page}t.{ext}"
        },
        "extensionMapping": {
            "j": "jpg",
            "p": "png",
            "g": "gif",
            "w": "webp"
        },
        "mirrors": [
            "https://nhentai.xxx",
            "https://nhentai.to"
        ],
        "useMirrors": false
    },
    "scraper": {
        "enabled": true,
        "selectors": {
            "homepage": {
                "container": ".index-container",
                "galleryCard": ".gallery",
                "cover": ".cover img",
                "link": "a.cover",
                "title": "caption"
            },
            "detail": {
                "titleEnglish": "#info h1",
                "titleJapanese": "#info h2",
                "tags": "#info a.tag",
                "tagContainer": ".tag-container"
            },
            "pagination": {
                "pageLinks": ".pagination a.page",
                "current": ".pagination .current"
            }
        }
    },
    "network": {
        "rateLimit": {
            "enabled": true,
            "requestsPerMinute": 60,
            "minDelayMs": 200,
            "cooldownDurationMs": 300000
        },
        "retry": {
            "maxAttempts": 3,
            "delayMs": 1000,
            "exponentialBackoff": true
        },
        "cloudflare": {
            "bypassEnabled": true,
            "antiDetection": true
        }
    },
    "features": {
        "search": true,
        "random": true,
        "related": true,
        "download": true,
        "favorite": true,
        "supportsTagExclusion": true,
        "supportsAdvancedSearch": true
    },
    "ui": {
        "displayName": "nhentai",
        "iconPath": "assets/icons/nhentai.png",
        "themeColor": "#EC2C79",
        "cardStyle": "standard"
    }
}