{
    "source": "crotpedia",
    "version": "1.0.0",
    "lastUpdated": "2026-01-13T13:16:00+07:00",
    "baseUrl": "https://crotpedia.net",
    "scraper": {
        "enabled": true,
        "selectors": {
            "latest": {
                "container": ".flexbox4-item",
                "link": "a",
                "cover": ".flexbox4-thumb img",
                "title": ".flexbox4-side .title a"
            },
            "search": {
                "container": ".flexbox2-item",
                "link": "a",
                "cover": ".flexbox2-thumb img",
                "title": ".flexbox2-title span"
            },
            "doujinList": {
                "link": "a.series"
            },
            "detail": {
                "title": ".series-titlex h2",
                "cover": ".series-thumb img",
                "status": ".series-infoz .status",
                "infoList": ".series-infolist li",
                "infoLabel": "b",
                "infoValue": "span",
                "genres": ".series-genres a",
                "synopsis": ".series-synops p",
                "chapterList": ".series-chapterlist li",
                "chapterLink": ".flexch-infoz a",
                "chapterTitle": ".flexch-infoz a span",
                "chapterDate": ".flexch-infoz .date"
            },
            "reader": {
                "container": ".reader-area",
                "images": ".reader-area p img"
            },
            "pagination": {
                "current": ".pagination .page-numbers.current",
                "next": ".pagination .next.page-numbers",
                "previous": ".pagination .prev.page-numbers",
                "links": ".pagination a.page-numbers:not(.next):not(.prev)"
            }
        },
        "urlPatterns": {
            "home": "/",
            "page": "/page/{num}/",
            "seriesDetail": "/baca/series/{slug}/",
            "chapterReader": "/baca/{slug}/",
            "genre": "/baca/genre/{slug}/",
            "search": "/?s={query}",
            "searchPaginated": "/page/{num}/?s={query}",
            "advancedSearch": "/advanced-search/?title={title}&author={author}&artist={artist}&yearx={year}&status={status}&type={type}&order={order}"
        }
    },
    "auth": {
        "enabled": true,
        "loginEndpoint": "/login/",
        "registerEndpoint": "/register/",
        "sessionCookies": [
            "cf_clearance",
            "PHPSESSID"
        ],
        "sessionDurationSeconds": 86400
    },
    "network": {
        "timeout": 30000,
        "retry": {
            "maxAttempts": 3,
            "delayMs": 1000,
            "exponentialBackoff": true
        }
    },
    "features": {
        "search": true,
        "random": false,
        "related": false,
        "download": true,
        "favorite": true,
        "chapters": true,
        "bookmark": true,
        "supportsTagExclusion": false,
        "supportsAdvancedSearch": true
    },
    "ui": {
        "displayName": "Crotpedia",
        "iconPath": "assets/icons/crotpedia.png",
        "themeColor": "#FF5722",
        "cardStyle": "chapters"
    }
}