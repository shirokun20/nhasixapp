{
  "commands": {
    "AutoFormat": {
      "type": "bash",
      "command": "dart format \"$FILE_PATH\"",
      "description": "Auto-format Dart code on save"
    },
    "CheckProtectedFiles": {
      "type": "bash",
      "command": "if [[ \"$FILE_PATH\" == *\".g.dart\" ]] || [[ \"$FILE_PATH\" == *\".freezed.dart\" ]]; then echo \"Error: Cannot edit generated files directly.\" && exit 1; fi",
      "description": "Prevent editing of generated files"
    }
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "**/*.dart",
        "hooks": [
          {
            "type": "command",
            "command": "AutoFormat"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "**/*.dart",
        "hooks": [
          {
            "type": "command",
            "command": "CheckProtectedFiles"
          }
        ]
      }
    ]
  }
}
